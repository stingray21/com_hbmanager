<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="hbpictures">
		<fieldset name="pictures">
			<field 
				name="id" 
				type="hidden"
			/>
			<field 
				name="kuerzel" 
				type="hidden"
			/>
			<field 
				name="dateiname" 
				type="hidden"
			/>
			<field 
				name="foto" 
				type="imagelist" 
				default="" 
				label="Foto auswählen" 
				description="" 
				directory="../hbdata/images/teams/" 
				exclude="" 
				stripext="" 
			/>
			<field
				name="untertitel"
				type="editor"
				label="Bild-Untertitel" 
				description="Namen der Spieler im Mannschafts-Foto"
				default=""
				buttons="false"
				height="170px"
			/>
			<field
				name="kommentar"
				type="text"
				label="Bemerkung" 
				description="Bemerkung zum Bild"
				default=""
				size="30"
			/>
			<field
				name="saison"
				type="text"
				label="Saison" 
				description="Zugehörige Saison zum Bild"
				default=""
				size="10"
			/>
			<field
				name="untertitel_dt1"
				type="text"
				label="Zeile 1" 
				description="Untertitel Ziele 1"
				default=""
				size="20"
			/>
			<field
				name="untertitel_dd1"
				type="textarea"
				label="Zeile 1" 
				description="Untertitel Ziele 1"
				default=""
				cols="45"
				rows="1"
			/>
			<field
				name="untertitel_dt2"
				type="text"
				label="Zeile 2" 
				description="Untertitel Ziele 2"
				default=""
				size="20"
			/>
			<field
				name="untertitel_dd2"
				type="textarea"
				label="Zeile 2" 
				description="Untertitel Ziele 2"
				default=""
				cols="45"
				rows="1"
			/>
			<field
				name="untertitel_dt3"
				type="text"
				label="Zeile 3" 
				description="Untertitel Ziele 3"
				default=""
				size="20"
			/>
			<field
				name="untertitel_dd3"
				type="textarea"
				label="Zeile 3" 
				description="Untertitel Ziele 3"
				default=""
				cols="45"
				rows="1"
			/>
			<field
				name="untertitel_dt4"
				type="text"
				label="Zeile 4" 
				description="Untertitel Ziele 4"
				default=""
				size="20"
			/>
			<field
				name="untertitel_dd4"
				type="textarea"
				label="Zeile 4" 
				description="Untertitel Ziele 4"
				default=""
				cols="45"
				rows="1"
			/>
		</fieldset>
	</fields>
</form>