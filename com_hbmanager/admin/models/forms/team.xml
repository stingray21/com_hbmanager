<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addrulepath="administrator/components/com_hbmanager/models/rules">
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="teamkey"
				type="text"
				label="COM_HBMANAGER_TEAM_TEAMKEY_LABEL"
				description="COM_HBMANAGER_TEAM_TEAMKEY_DESC"
				size="5"
				class="inputbox"
				default=""
				/>
		<field
				name="order"
				type="text"
				label="COM_HBMANAGER_TEAM_ORDER_LABEL"
				description="COM_HBMANAGER_TEAM_ORDER_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="team"
				type="text"
				label="COM_HBMANAGER_TEAM_TEAM_LABEL"
				description="COM_HBMANAGER_TEAM_TEAM_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="name"
				type="text"
				label="COM_HBMANAGER_TEAM_NAME_LABEL"
				description="COM_HBMANAGER_TEAM_NAME_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="shortName"
				type="text"
				label="COM_HBMANAGER_TEAM_SHORTNAME_LABEL"
				description="COM_HBMANAGER_TEAM_SHORTNAME_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="leagueKey"
				type="text"
				label="COM_HBMANAGER_TEAM_LEAGUEKEY_LABEL"
				description="COM_HBMANAGER_TEAM_LEAGUEKEY_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="league"
				type="text"
				label="COM_HBMANAGER_TEAM_LEAGUE_LABEL"
				description="COM_HBMANAGER_TEAM_LEAGUE_DESC"
				size="40"
				class="inputbox"
				default=""
				/>
		<field
				name="sex"
				type="list"
				label="COM_HBMANAGER_TEAM_SEX_LABEL"
				description="COM_HBMANAGER_TEAM_SEX_DESC"
				default=""
				>
				<option value="">COM_HBMANAGER_SEX_SELECT</option>
				<option value="m">COM_HBMANAGER_SEX_MALE</option>
				<option value="w">COM_HBMANAGER_SEX_FEMALE</option>
				<option value="g">COM_HBMANAGER_SEX_MIXED</option>
		</field>
		
		<field
				name="youth"
				type="list"
				label="COM_HBMANAGER_TEAM_YOUTH_LABEL"
				description="COM_HBMANAGER_TEAM_YOUTH_DESC"
				default=""
				>
				<option value="">COM_HBMANAGER_YOUTH_SELECT</option>
				<option value="aktiv">COM_HBMANAGER_YOUTH_AKTIV</option>
				<option value="A">COM_HBMANAGER_YOUTH_A</option>
				<option value="B">COM_HBMANAGER_YOUTH_B</option>
				<option value="C">COM_HBMANAGER_YOUTH_C</option>
				<option value="D">COM_HBMANAGER_YOUTH_D</option>
				<option value="E">COM_HBMANAGER_YOUTH_E</option>
				<option value="F">COM_HBMANAGER_YOUTH_F</option>
				<option value="minis">COM_HBMANAGER_YOUTH_MINIS</option>
		</field>

		<field
				name="leagueIdHvw"
				type="text"
				label="COM_HBMANAGER_TEAM_HVWLINK_LABEL"
				description="COM_HBMANAGER_TEAM_HVWLINK_DESC"
				size="40"
				validate="leagueid"
				class="inputbox"
				default=""
				/>
		<field
				name="email"
				type="text"
				label="COM_HBMANAGER_TEAM_EMAIL_LABEL"
				description="COM_HBMANAGER_TEAM_EMAIL_DESC"
				size="10"
				class="inputbox"
				default=""
				/>
	</fieldset>
