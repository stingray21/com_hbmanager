<?xml version="1.0" encoding="utf-8"?>
<form>
	
	<fields name="hbteam">
		
		<fieldset name="team" addfieldpath="/administrator/components/com_hbteams/models/fields">
					
			<field 
				name="reihenfolge" 
				type="text" 
				default="" 
				label="RF" 
				description="" 
				size="1" 
			/>
			<field 
				name="kuerzel" 
				type="text" 
				default="" 
				label="Kürzel" 
				description="" 
				size="6" 
			/>
			<field 
				name="mannschaft" 
				type="text" 
				default="" 
				label="Mannschaft" 
				description="" 
				size="19" 
			/>
			<field 
				name="name" 
				type="text" 
				default="" 
				label="Name" 
				description="" 
				size="20" 
			/>
			<field 
				name="nameKurz" 
				type="text" 
				default="" 
				label="Name (kurz)" 
				description="" 
				size="17" 
			/>
			<field 
				name="ligaKuerzel" 
				type="text" 
				default="" 
				label="Liga Kürzel" 
				description="" 
				size="8" 
			/>
			<field 
				name="liga" 
				type="text" 
				default="" 
				label="Liga" 
				description="" 
				size="14" 
			/>	
			<field 
				name="geschlecht" 
				type="list" 
				default="" 
				label="m/w" 
				description=""
				>
					<option value="leer">auswählen</option>					
					<option value="m">männlich</option>
					<option value="w">weiblich</option>
					<option value="g">gemischt</option>
			</field>
			<field 
				name="jugend"
				type="list" 
				default="0" 
				label="Jugend" 
				description=""
				>				
					<option value="aktiv">Aktiv</option>
					<option value="A">A-Jgd.</option>
					<option value="B">B-Jgd.</option>
					<option value="C">C-Jgd.</option>
					<option value="D">D-Jgd.</option>
					<option value="E">E-Jgd.</option>
					<option value="F">F-Jgd.</option>
					<option value="minis">Minis</option>
			</field>	 
			<field 
				name="hvwLink" 
				type="text" 
				default="" 
				label="http://www.hvw-online.org/..." 
				description="Link" 
				size="40" 
			/>		
			<!--label="HVW Link Extension &lt;br&gt;(http://www.hvw-online.org/...)" -->	
			
			<field 
				name="email" 
				type="text" 
				default="" 
				label="Email-Alias" 
				description="" 
				size="20" 
			/>	
		</fieldset>
	</fields>
	
	<fields name="hbAddTeam">

		<fieldset name="addTeam" addfieldpath="/administrator/components/com_hbteams/models/fields">
					
			<field
				name="includeTeam"
				type="checkbox"
				value="1" 
				label="" 
				description=""
				default="0"
			/>
			<field 
				name="staffel" 
				type="text" 
				default="" 
				label="Kürzel" 
				description="" 
				size="7" 
			/>
			<field 
				name="staffelName" 
				type="text" 
				default="" 
				label="Liga" 
				description="" 
				size="40" 
			/>
			<field 
				name="url" 
				type="text" 
				default="" 
				label="HVW Link" 
				description="Link" 
				size="45" 
			/>
			<field 
				name="geschlecht" 
				type="list" 
				default="" 
				label="m/w" 
				description=""
				>
					<option value="leer">auswählen</option>					
					<option value="m">männlich</option>
					<option value="w">weiblich</option>
					<option value="g">gemischt</option>
			</field>
			<field 
				name="jugend"
				type="list" 
				default="0" 
				label="Jugend" 
				description=""
				>				
					<option value="aktiv">Aktiv</option>
					<option value="A">A-Jgd.</option>
					<option value="B">B-Jgd.</option>
					<option value="C">C-Jgd.</option>
					<option value="D">D-Jgd.</option>
					<option value="E">E-Jgd.</option>
					<option value="minis">Minis</option>
			</field>	 
			<field 
				name="saison" 
				type="text" 
				default="" 
				label="Saison" 
				description="" 
				size="10" 
			/>	 	 	 	
			<field 
				name="mannschaftenTabelle" 
				type="list" 
				default="" 
				label="in Tabelle" 
				description=""
				>
					<option value="leer">auswaehlen</option>
			</field>
			<field 
				name="mannschaftenSpielplan" 
				type="list" 
				default="" 
				label="in Spielplan" 
				description=""
				>
					<option value="leer">auswaehlen</option>
			</field>
			
		</fieldset>
	</fields>
		
		
	
	<fields name="hbDeleteTeam">
		
		<fieldset name="deleteTeam" addfieldpath="/administrator/components/com_hbteams/models/fields">
					
			<field
				name="deleteTeam"
				type="checkbox"
				value="1" 
				label="löschen" 
				description=""
				default="0"
			/>
			<field 
				name="kuerzel" 
				type="hidden" 
				default="" 
			/>
		</fieldset>
	</fields>
</form>